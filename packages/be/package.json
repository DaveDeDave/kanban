{
  "name": "@kanban/be",
  "version": "1.0.0",
  "type": "module",
  "repository": "https://github.com/DaveDeDave/kanban",
  "author": "Davide Ceci",
  "license": "MIT",
  "scripts": {
    "publish": "wrangler publish",
    "dev": "wrangler dev --config local.toml --env development",
    "dev:local": "miniflare dist/index.js --wrangler-config local.toml --wrangler-env development --port 8000 --watch",
    "tail": "wrangler tail",
    "build": "esbuild --bundle --sourcemap --outdir=dist ./src/index.js",
    "test": "yarn build && ava --verbose test/*.spec.js"
  },
  "dependencies": {
    "@kanban/lib": "1.0.0",
    "@kanban/models": "1.0.0",
    "itty-cors": "^0.3.4",
    "itty-router": "^2.6.6",
    "itty-router-extras": "^0.4.2"
  },
  "devDependencies": {
    "ava": "^5.1.0",
    "esbuild": "^0.15.16",
    "miniflare": "^2.11.0",
    "wrangler": "^2.4.2"
  }
}
