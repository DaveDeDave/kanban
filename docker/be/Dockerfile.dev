FROM alpine:latest
WORKDIR /app
RUN apk add nodejs npm
RUN npm install -g yarn
COPY package.json .
COPY yarn.lock .
COPY .yarnrc.yml .
COPY .yarn ./.yarn/
COPY packages/be/package.json ./packages/be/package.json
RUN yarn workspaces focus @kanban/be
CMD echo "y\n" | yarn workspace @kanban/be dev --local --config local.toml --env development